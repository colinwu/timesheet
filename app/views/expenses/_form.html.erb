<%= form_for @expense do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :hst %><br />
    <%= f.text_field :hst %>
  </p>
  <p>
    <%= f.label :desc, "Description" %><br />
    <%= f.text_field :desc %>
  </p>
  <p>
    <%= f.label :money, "Money Expense?" %><br />
    <%= f.check_box :money %>
  </p>
  <p>
    <%= f.label :project_id, "Project" %><br />
    <%= f.select :project_id, Project.all.order(:name).collect {|p| [p.name, p.id]} %>
  </p>
  <p><%= f.submit %></p>
<% end %>
