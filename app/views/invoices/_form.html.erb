<%= form_for @invoice do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :project_id %><br />
    <%= f.select :project_id, Project.all(:order => :name).collect {|p| [p.name, p.id]} %>
  </p>
  <p>
    <%= f.label :invoice_date %><br />
    <%= f.calendar_date_select :invoice_date %>
  </p>
  <p>
    <%= f.label :paid_date %><br />
    <%= f.calendar_date_select :paid_date %>
  </p>
  <p>
    <%= f.label :memo %><br />
    <%= f.text_field :memo %>
  </p>
  <p><%= f.submit %></p>
<% end %>
